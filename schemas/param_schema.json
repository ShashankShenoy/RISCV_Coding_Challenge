{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["parameters"],
  "properties": {
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "type", "constraints"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "type": {
            "type": "string",
            "enum": ["integer", "boolean", "enum", "structure", "set"]
          },
          "constraints": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
